<% layout('/layouts/boilerplate') %>
<div class="row mt-3 mb-3">
      <div class="col-5 offset-3">
      <h2>Create New Listing</h2><br>
      <!-- enctype="multipart/form-data" -->
      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                  <label for="title" class="form-label">Enter Title</label>
                  <input type="text" class="form-control" name="listing[title]" placeholder="Add a catchy title">
                  <div class="valid-feedback">Title looks good</div>
                  <div class="invalid-feedback">Please enter title</div>
            </div>
            <div class="mb-3">
                  <label for="description" class="form-label">Enter Description</label>
                  <textarea class="form-control" name="listing[description]" rows="3" cols="10" placeholder="Enter description" required></textarea>
                  <div class="invalid-feedback">Please enter a short description</div>
            </div>
            <div class="mb-3">
                  <label for="image" class="form-label">Upload Image</label>
                  <input type="file" class="form-control" name="listing[image]" required >
            </div>
            <div class="row">
                  <div class="mb-3 col-md-6">
                        <label for="price" class="form-label">Enter Price</label>
                        <input type="number" class="form-control" name="listing[price]" placeholder="Ex: 1200" required>
                        <div class="invalid-feedback">Price should be valid</div>
                  </div>
                  <div class="mb-3 col-md-6">
                        <label for="country" class="form-label">Enter Country</label>
                        <input type="text" class="form-control" name="listing[country]" placeholder="Ex: India" required>
                        <div class="invalid-feedback">Country should be valid</div>
                  </div>
            </div>
            <div class="mb-3">
                  <label for="location" class="form-label">Enter Location</label>
                  <input type="text" class="form-control" name="listing[location]" placeholder="Ex: Delhi" required>
                  <div class="invalid-feedback">Location should be valid</div>
            </div>
            <div class="mb-3">
                  <label for="category" class="form-label">Enter Category og you location:</label>
                  <select class="form-control " name="listing[category]" required>
                        <option value="Others" selected disabled>Select a category</option>
                        <option class="dropdown-item" value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing-Pools">Amazing Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Beach">Beach</option>
                        <option value="Boats">Boats</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Others">Others</option>
                  </select>
            </div>
            <button class="btn btn-dark add-btn mt-1">Create</button>
      </form>
</div>
</div>