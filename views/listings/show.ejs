<% layout("/layouts/boilerplate") %>
<body>
    <h3>Listing Details : </h3>
    <div class="row">
        <div class="col-8 offset-2"></div>
 

    <div class="card col-6" >
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
          <p class="card-text">
           <b> <%= listings.title %></b><br>
           <%= listings.description %><br>
           <%= listings.price.toLocaleString("en-IN") %><br>
           <%= listings.location %><br>
           <%= listings.country %><br>
        </p>
        </div>
      </div>
      <div class="btns">
    <a href="/listings/<%= listings._id %>/edit" class="btn btn-dark">edit </a>
    
    <form method="post" action="/listings/<%=listings._id%>?_method=DELETE"> 
        <button class="btn btn-dark">
            delete 
        </button></div>
    </form>
</div>
</body>
