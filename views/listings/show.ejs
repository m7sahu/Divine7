<% layout("/layouts/boilerplate") %>
<body>
    <h3>Listing Details : </h3>
    <div class="row">
        <div class="col-8 offset-2"></div>
 

    <div class="card col-6" >
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
          <p class="card-text">
           <b> <%= listing.title %></b><br>
           <%= listing.description %><br>
           <%= listing.price.toLocaleString("en-IN") %><br>
           <%= listing.location %><br>
           <%= listing.country %><br>
        </p>
        </div>
      </div>

      <% if(currUser && currUser._idequals(listings.owner)) { %>


      <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">edit </a>
    
    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE"> 
        <button class="btn btn-dark">
            delete 
        </button>
    </form></div> <% } %>
    <div class="col-8 offset-2">
        <hr>
        <h4>Leave a review</h4>
        <form action="/listings/<%= listings.id %>/reviews" method="post">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" class="form-range" name="review[rating]">
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Rating</label>
                <textarea class="form-control" cols="30" rows="5" id="comment" name="review[comment]"></textarea>
            </div>
            <button class="btn btn-dark">Submit</button>
        </form>
        <hr>
        <h4>All Reviews</h4>
        <div class="row">
        <ul>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">tom holland</h5>
        <% for(review of listing.review) { %>
            <li> <% review.comment %>, <% review.rating %></li>
            </div>
        <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %?_method=delete>">
            <button class="btn btn-dark btn-sm">Delete</button>
        </form></div>
        <% } %></ul></div>

    </div>
</div>
</body>