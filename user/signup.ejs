<% layout("/layouts/boilerplate") %>
   
    <div class="row mt-3">
        <h2 class="col-6 offset-2">Sign up for wanderlust</h2>
        <div class="col-8 offset-2"></div>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input name="username" placeholder="enter text" id="username" type="text" class="form-control"><br><br>
                <div class="validate-feedback">looks good</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" placeholder="enter text" id="email" type="text" class="form-control"><br><br>
               
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" placeholder="enter text" id="password" type="text" class="form-control"><br><br>
                
            </div>
            <button class="btn-dark">sign up</button>
        </form>
        </div>
    </div>
            